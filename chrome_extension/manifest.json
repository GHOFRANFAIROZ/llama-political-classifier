{
  "manifest_version": 3,
  "name": "راصد المحتوى التحريضي الذكي",
  "version": "1.5.1",
  "description": "أداة لمراقبة وتصنيف المنشورات على فيسبوك وX بالذكاء الاصطناعي، لجمع أدلة على المحتوى التحريضي/العنيف وتسهيل التبليغ.",
  "permissions": [
    "scripting",
    "tabs",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://anti-hate-api.mangowave-59e53001.germanywestcentral.azurecontainerapps.io/*",
    "https://x.com/*",
    "https://twitter.com/*",
    "https://www.facebook.com/*",
    "https://facebook.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "floating-icon/*",
        "icon.png",
        "icon16.png",
        "icon48.png",
        "icon128.png"
      ],
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ]
    }
  ]
}