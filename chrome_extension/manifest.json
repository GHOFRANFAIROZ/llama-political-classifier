{
  "manifest_version": 3,
  "name": "راصد المحتوى التحريضي الذكي",
  "version": "1.0",
  "description": "أداة لمراقبة وتصنيف المنشورات على فيسبوك وX بالذكاء الاصطناعي، لجمع أدلة على المحتوى التحريضي/العنيف وتسهيل التبليغ.",
  "permissions": [
    "scripting",
    "tabs",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://my-ai-classifier.onrender.com/*",
    "https://*.x.com/*",
    "https://*.twitter.com/*",
    "https://*.facebook.com/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
